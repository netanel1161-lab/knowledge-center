            }
            
            const colorBox = document.createElement('div');
            colorBox.className = 'flex flex-col items-center p-4 rounded-xl shadow-lg transition-all duration-300 hover:shadow-xl hover:scale-[1.02] border border-gray-200';
            colorBox.style.backgroundColor = color.hex;
            
            colorBox.innerHTML = `
                <!-- Color Swatch (simulates the requested height/width ratio) -->
                <div class="color-swatch-display" style="background-color: ${color.hex};"><\/div> 
                <span class="text-xs font-semibold ${textColor} opacity-80 mb-1">${color.name}</span>
                <span id="hex-${key}" class="text-sm font-bold ${textColor} copy-target flex items-center transition-all duration-150">
                    ${color.hex}
                </span>
            `;
            
            // Add click listener to copy the hex code
            const hexElement = colorBox.querySelector(`#hex-${key}`);
            hexElement.addEventListener('click', (e) => copyToClipboard(e, color.hex));
            
            return colorBox;
        }

        // Setup copy functionality for all hex codes and render dynamic content
        function setupCopyListeners() {
            // 1. Render Core Colors Dynamically
            const coreContainer = document.getElementById('core-colors-container');
            const coreColors = LOK_COLOR_GROUPS.core.colors;
            Object.keys(coreColors).forEach(key => {
                coreContainer.appendChild(createColorBox(key, coreColors[key]));
            });
            
            // 2. Render Status Colors Dynamically
            const statusContainer = document.getElementById('status-colors-container');
            const statusColors = LOK_COLOR_GROUPS.status.colors;
            // Pad the status colors container to maintain the 5-column grid visual alignment
            const statusKeys = Object.keys(statusColors);
            statusKeys.forEach(key => {
                statusContainer.appendChild(createColorBox(key, statusColors[key]));
            });
            // Add empty placeholders for visual alignment (up to 5 columns)
            for (let i = statusKeys.length; i < 5; i++) {
                const placeholder = document.createElement('div');
                placeholder.className = 'hidden sm:block'; // Hide on mobile, show on larger screens for grid alignment
                statusContainer.appendChild(placeholder);
            }
            

            // 3. Add copy listeners to Typography code blocks
            document.querySelectorAll('code.copy-target').forEach(codeBlock => {
                codeBlock.addEventListener('click', (e) => copyToClipboard(e, codeBlock.textContent.trim()));
            });
            
            // 4. Inject SVG icons for display
            document.getElementById('icon-display-copy').innerHTML = LOK_ICONS.copy.svg;
            document.getElementById('icon-display-download').innerHTML = LOK_ICONS.download.svg.replace('#007AFF', LOK_COLOR_GROUPS.core.colors.primary.hex); 
        }

        document.addEventListener('DOMContentLoaded', setupCopyListeners);
    </script>
